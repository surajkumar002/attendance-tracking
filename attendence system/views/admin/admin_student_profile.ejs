<!DOCTYPE html>
<html>
  <head>
    <title>ATS | Student | Profile</title>
    <%- include('../partials/header') %>
  </head>
  <body>
    <%- include('../partials/sidebar') %>
    <div class="page">
      <!-- navbar-->
      <header class="header">
        <%- include('../partials/navbar') %>
      </header>
      
      <!-- Page Header-->
      <header class="py-4">
        <div class="container-fluid py-2">
        </div>
      </header>
      <!-- Forms Section-->
      <section class="pb-5"> 
        <div class="container-fluid">
          <div class="row">
            <!-- HR Info -->
            <div class="col-lg-12 col-sm-12">
              <div class="card">
                <div class="card-header border-bottom" style="background-color: #c3decf;">
                  <h3 style="font-size: x-large;" class="lead mb-0">Profile Information</h3>
                </div>
                <div class="card-body">
                  
                  <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        
                    </thead>
                    <tbody style="vertical-align: middle;">
                        <tr>
                            <td><b>Username</b></td>
                            <td><%= studentData.username %></td>
                        </tr>
                        <tr>
                            <td><b>Full Name</b></td>
                            <td><%= studentData.full_name %></td>
                        </tr>
                        <tr>
                            <td><b>Email</b></td>
                            <td><%= studentData.email %></td>
                        </tr>
                        <tr>
                            <td><b>Contact</b></td>
                            <td><%= studentData.contact %></td>
                        </tr>
                    </tbody>
                  </table>
                  
                  <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
                  <script src="https://cdn.datatables.net/1.12.0/js/jquery.dataTables.min.js"></script>
                  <script src="https://cdn.datatables.net/1.12.0/js/dataTables.bootstrap4.min.js"></script>
                  <script>
                      $(document).ready(function () {
                          $('#example').DataTable();
                      });
                  </script>

                </div>
              </div>
            </div>

          </div>
        </div>
      </section>

    </div>
    <%- include('../partials/footer') %>
  </body>
</html>