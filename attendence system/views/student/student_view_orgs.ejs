<!DOCTYPE html>
<html>
  <head>
    <title>ATS | Student | View Organizations</title>
    <%- include('../partials/header') %>
  </head>
  <body>
    <%- include('../partials/sidebar') %>
    <div class="page">
      <!-- navbar-->
      <header class="header">
        <%- include('../partials/navbar') %>
      </header>
      
      <!-- Page Header-->
      <header class="py-4">
        <div class="container-fluid py-2">
          <h1 class="h3 fw-normal mb-0">Organization to which you are enrolled</h1>
        </div>
      </header>
      <!-- Forms Section-->
      <section class="pb-5"> 
        <div class="container-fluid">
          <div class="row">
            <!-- HR Info -->
            <div class="col-lg-12 col-sm-12">
              <div class="card">
                <div class="card-header border-bottom" style="background-color: #c3decf;">
                  <h3 style="font-size: x-large;" class="lead mb-0">Search Organizations</h3>
                </div>
                <div class="card-body">
                  <p class="text-sm lead">You can search by any parameters (username, Name, email, contact, etc.)</p>
                  
                  <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Organization Name</th>
                            <th>email</th>
                            <th>Contact</th>
                            <th>Number of Students Enrolled</th>
                            <th>View</th>
                        </tr>
                    </thead>
                    <tbody style="vertical-align: middle;">
                        <% detailsData.forEach((org) => { %>
                          <tr>
                              <td><%= org.companyName %></td>
                              <td><%= org.email %></td>
                              <td><%= org.contact %></td>
                              <td><%= org.students.length %></td>
                              <td><a href="<%= origin %>/student/<%= userId %>/view_org/<%= org.adminId %>/" class="btn btn-lg btn-info" style="width: 100%;">View</a></td>
                          </tr>
                        <% }) %>
                    </tbody>
                  </table>
                  
                  <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
                  <script src="https://cdn.datatables.net/1.12.0/js/jquery.dataTables.min.js"></script>
                  <script src="https://cdn.datatables.net/1.12.0/js/dataTables.bootstrap4.min.js"></script>
                  <script>
                      $(document).ready(function () {
                          $('#example').DataTable();
                      });
                  </script>

                </div>
              </div>
            </div>

          </div>
        </div>
      </section>

    </div>
    <%- include('../partials/footer') %>
  </body>
</html>